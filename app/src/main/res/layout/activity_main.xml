<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center|bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">
        <TextView
            android:id="@+id/res"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="60sp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/Row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:onClick="clickedClear"
                    android:text="C"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@drawable/button_orange"
                    android:backgroundTint="@color/orange"/>

                <ImageButton
                    android:id="@+id/erase"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickederase"
                    android:src="@drawable/ic_back_arrow"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    />



                <Button
                    android:id="@+id/mod"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickederase"
                    android:text="%"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/divide"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickeddivide"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="7"
                    android:text="7"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/eight"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="8"
                    android:text="8"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/nine"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="9"
                    android:text="9"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedmultiply"
                    android:text="*"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/four"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="4"
                    android:text="4"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/five"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="5"
                    android:text="5"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/six"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="6"
                    android:text="6"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/minus"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedminus"
                    android:text="-"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/one"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="1"
                    android:text="1"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/two"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="2"
                    android:text="2"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/three"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedNumber"
                    android:tag="3"
                    android:text="3"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/plus"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedplus"
                    android:text="+"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Row5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/zero"
                    android:layout_width="190dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedzero"
                    android:text="0"
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/dot"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickeddot"
                    android:text="."
                    android:textSize="30sp"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/equal"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:onClick="clickedequal"
                    android:text="="
                    android:textSize="30sp"
                    android:background="@drawable/button"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>